{
    //GLOBAL
    "telemetry.enableTelemetry": false,
    // TERMINAL
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.fontFamily": "",
    "terminal.integrated.profiles.linux": {
        "bash": {"path": "bash"},
        "python3 (global)": {"path": "python3"},
        "python3.6 (global)": {"path": "python3.6"},
        "python3.7 (global)": {"path": "python3.7"},
        "python3.8 (global)": {"path": "python3.8"},
        "python3.9 (global)": {"path": "python3.9"},
        "python3.10 (global)": {"path": "python3.10"},
    },
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.automationShell.linux": "bash",
    "terminal.integrated.profiles.windows": {
        "bash (git)": {
            "source": "Git Bash",
            "args": [
                "--login"
            ],
            "icon": "terminal-bash"
        },
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "cmd": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "python (global)": {"path": "python"},
        "python3.6 (global)": {"path": "python3.6"},
        "python3.7 (global)": {"path": "python3.7"},
        "python3.8 (global)": {"path": "python3.8"},
        "python3.9 (global)": {"path": "python3.9"},
        "python3.10 (global)": {"path": "python3.10"},
    },
    "terminal.integrated.defaultProfile.windows": "bash (git)",
    "terminal.integrated.automationShell.windows": "bash (git)",
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    // EDITOR
    "files.autoSave": "onFocusChange",
    "window.zoomLevel": 0,
    "editor.mouseWheelZoom": true,
    "editor.minimap.enabled": true,
    "editor.minimap.scale": 1,
    "editor.codeLens": false,
    "editor.folding": false,
    "editor.wordWrapColumn": 88,
    "editor.suggestSelection": "first",
    "workbench.activityBar.visible": true,
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "diffEditor.ignoreTrimWhitespace": false,
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "vsintellicode.features.python.deepLearning": "enabled",
    // COLORS / THEMES
    "workbench.iconTheme": "file-icons",
    "workbench.colorTheme": "Krys Colors",
    "editor.semanticTokenColorCustomizations": {
        "[Krys Colors]": {
            // Apply to this theme only
            "enabled": true,
            "rules": {
                // https://github.com/microsoft/pylance-release#semantic-highlighting
                "*.typeHint:python": {
                    "foreground": "#89ffa6",
                    "fontStyle": "italic"
                },
                "*.typeHintComment:python": {
                    "foreground": "#75715E",
                    "fontStyle": ""
                },
                "class:python": {
                    "foreground": "#66d9ef",
                    "fontStyle": ""
                },
                "class.builtin:python": {
                    "foreground": "#268BD2",
                    "fontStyle": "italic"
                },
                "class.declaration:python": {
                    "foreground": "#a6e22e",
                    "fontStyle": "underline bold"
                },
                "class.typeHint:python": {
                    "foreground": "#89ffa6",
                    "fontStyle": "italic"
                },
                "selfParameter:python": {
                    "foreground": "#94558d",
                    "fontStyle": ""
                },
                "clsParameter:python": {
                    "foreground": "#94558d",
                    "fontStyle": ""
                },
                "magicFunction.declaration:python": {
                    "foreground": "#b200b2",
                    "fontStyle": "italic"
                },
                "function:python": {
                    "foreground": "#66d9ef",
                    "fontStyle": ""
                },
                "function.builtin:python": {
                    "foreground": "#66d9ef",
                    "fontStyle": "italic"
                },
                "function.declaration:python": {
                    "foreground": "#a6e22e",
                    "fontStyle": "bold"
                },
                "function.typeHint:python": {
                    "foreground": "#89ffa6",
                    // "foreground": "#a7ff95",
                    "fontStyle": "italic"
                },
                "member:python": {
                    "foreground": "#F8F8F2",
                    "fontStyle": ""
                },
                "intrinsic:python": {
                    "foreground": "#66d9ef",
                    "fontStyle": "italic"
                },
                "module:python": {
                    "foreground": "#F8F8F2",
                    "fontStyle": ""
                },
                "variable.readonly:python": {
                    "foreground": "#F8F8F2",
                    "fontStyle": "bold"
                },
            }
        }
    },
    "material-icon-theme.showWelcomeMessage": false,
    "bracket-pair-colorizer-2.colors": [
        "#E86233",
        "#6F84FF",
        "#E8BA36",
        "#CD1CEF",
        "#54A857"
    ],
    "bracket-pair-colorizer-2.highlightActiveScope": true,
    "bracket-pair-colorizer-2.showBracketsInGutter": true,
    "indentRainbow.colors": [
        "rgba(255,255,64,0.07)",
        "rgba(127,255,127,0.07)",
        "rgba(255,127,255,0.07)",
        "rgba(79,236,236,0.07)",
    ],
    "indentRainbow.ignoreErrorLanguages": [
        "markdown",
        "restructuredtext",
    ],
    // ERROR LENS
    "errorLens.addAnnotationTextPrefixes": true,
    "errorLens.delay": 1,
    "errorLens.gutterIconsEnabled": true,
    "errorLens.gutterIconSet": "defaultOutline",
    // TODO HIGHLIGHT
    "todo-tree.filtering.includeHiddenFiles": true,
    "todo-tree.regex.regex": "((^|//|#|<!--|;|/\\*|\\.\\.)\\s*($TAGS))",
    "todo-tree.general.enableFileWatcher": true,
    "todo-tree.general.statusBar": "tags",
    "todo-tree.general.tags": [
        "NOTE:",
        "CHANGE ME",
        "TODO:",
        "BUG:",
        "FIXME:",
        "HACK:",
    ],
    "todo-tree.highlights.enabled": true,
    "todo-tree.highlights.defaultHighlight": {
        "opacity": 100,
        "type": "tag",
    },
    "todo-tree.highlights.customHighlight": {
        "NOTE:": {
            "foreground": "white",
            "background": "green",
            "icon": "note",
            "iconColour": "green",
            "rulerColour": "rgba(0,0,0,0)",
            "hideFromTree": true,
            "hideFromStatusBar": true,
        },
        "CHANGE ME": {
            "foreground": "black",
            "background": "aqua",
            "icon": "arrow-switch",
            "iconColour": "aqua",
            "rulerColour": "rgba(0,0,0,0)",
            // "hideFromTree": true,
            "hideFromStatusBar": true,
        },
        "TODO:": {
            "foreground": "black",
            "background": "#ff00d4",
            "icon": "checklist",
            "iconColour": "#ff00d4",
            "type": "text", 
            "rulerColour": "#ff00d4",
        },
        "BUG:": {
            "foreground": "white",
            "background": "red",
            "icon": "bug",
            "iconColour": "red",
            "gutterIcon": true,
            "type": "text",
            "rulerColour": "red",
        },
        "FIXME:": {
            "foreground": "white",
            "background": "orangered",
            "icon": "flame",
            "iconColour": "orangered",
            "gutterIcon": true,
            "type": "whole-line",
            "rulerColour": "red",
        },
        "HACK:": {
            "foreground": "black",
            "background": "orange",
            "icon": "beaker",
            "iconColour": "orange",
            "gutterIcon": true,
            "type": "text",
            "rulerColour": "red",
        },
    },
    "todo-tree.tree.showCountsInTree": true,
    "todo-tree.filtering.excludeGlobs": [
        // DIRECTORIES
        "**/node_modules/**",
        "**/bower_components/**",
        "**/dist/**",
        "**/build/**",
        "**/.vscode/**",
        "**/_output/**",
        "**/*.min.*",
        "**/*.map",
        "**/.next/**",
        "**/.tox/**",
        "**/.nox/**",
        "**/*venv*/**",
        // FILES
        "**/.gitignore",
        "**/.gitattributes",
    ],
    // SPELLING
    "spellright.language": [
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "spellright.ignoreFiles": [
        "**/.gitignore",
        "**/.spellignore"
    ],
    // RUST
    "rust-analyzer.inlayHints.typeHints": true,
    // PYTHON
    "python.terminal.activateEnvInCurrentTerminal": false,
    "python.venvPath": "${workspaceFolder}/.venv/bin/activate",
    "python.pythonPath": "${workspaceFolder}/.venv/bin/python",
    "python.languageServer": "Pylance",
    "python.autoComplete.addBrackets": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "${workspaceFolder}/.venv/bin/flake8helled",
    "python.linting.mypyEnabled": true,
    "python.linting.mypyPath": "${workspaceFolder}/.venv/bin/mypy",
    "python.analysis.disabled": ["undefined-variable"],
    "python.analysis.completeFunctionParens": true,
    "autoDocstring.docstringFormat": "sphinx",
    "autoDocstring.includeExtendedSummary": true,
    "autoDocstring.customTemplatePath": "~/.config/Code/User/sphinx_docstring_template_custom.mustache",
    // RST
    "restructuredtext.builtDocumentationPath": "${workspaceFolder}/docs/build/html",
    "restructuredtext.confPath": "${workspaceFolder}/docs/source",
    "restructuredtext.linter.executablePath": "${workspaceFolder}/.venv/bin/rstcheck",
    "restructuredtext.linter.extraArgs": [
        "--config ${workspaceFolder}/tox.ini",
    ],
    "restructuredtext.linter.run": "onSave",
    "restructuredtext.sphinxBuildPath": "${workspaceFolder}/.venv/Scripts/sphinx-build",
}
