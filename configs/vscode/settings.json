{
    // ---------------------------------------------------------------------------------
    // | GLOBAL                                                                        |
    // ---------------------------------------------------------------------------------
    "telemetry.telemetryLevel": "off",
    "files.autoSave": "onFocusChange",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.untitled.hint": "hidden",
    // ---------------------------------------------------------------------------------
    // | TERMINAL                                                                      |
    // ---------------------------------------------------------------------------------
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash"
        },
        "python3 (global)": {"path": "python3"},
        "python3.6 (global)": {"path": "python3.6"},
        "python3.7 (global)": {"path": "python3.7"},
        "python3.8 (global)": {"path": "python3.8"},
        "python3.9 (global)": {"path": "python3.9"},
        "python3.10 (global)": {"path": "python3.10"}
    },
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.automationShell.linux": "bash",
    "terminal.integrated.profiles.windows": {
        "bash (git)": {
            "source": "Git Bash",
            "args": [
                "--login"
            ],
            "icon": "terminal-bash"
        },
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "cmd": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "python (global)": {"path": "python"},
        "python3.6 (global)": {"path": "python3.6"},
        "python3.7 (global)": {"path": "python3.7"},
        "python3.8 (global)": {"path": "python3.8"},
        "python3.9 (global)": {"path": "python3.9"},
        "python3.10 (global)": {"path": "python3.10"}
    },
    "terminal.integrated.defaultProfile.windows": "bash (git)",
    "terminal.integrated.automationShell.windows": "bash (git)",
    "terminal.external.windowsExec": "C:\\Program Files\\Git\\bin\\bash.exe",
    // ---------------------------------------------------------------------------------
    // | EDITOR                                                                        |
    // ---------------------------------------------------------------------------------
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.mouseWheelZoom": true,
    "editor.minimap.enabled": true,
    "editor.minimap.scale": 1,
    "editor.codeLens": false,
    "editor.folding": false,
    "editor.wordWrapColumn": 88,
    "editor.suggestSelection": "first",
    "editor.multiCursorModifier": "ctrlCmd",
    "workbench.activityBar.visible": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "files.associations": {
        ".babelrc": "json",
        ".csslintrc": "json",
        "cargo.lock": "toml",
        ".eslintignore": "ignore",
        ".htmlhintrc": "json",
        ".htmllintrc": "jsonc",
        ".linguirc": "json",
        ".prettierignore": "ignore",
        ".prettierrc": "json",
        "poetry.lock": "toml",
        "*.rst_t": "jinja",
        ".vuerc": "json",
        ".yamllint": "yaml"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    // ---------------------------------------------------------------------------------
    // | COLORS / THEMES                                                               |
    // ---------------------------------------------------------------------------------
    // ==============================
    // FONTS
    // ==============================
    "editor.fontFamily": "'Hack Nerd Font Mono', 'FiraCode Nerd Font Mono', 'Hack NF', 'FiraCode NF', Consolas, monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "terminal.integrated.fontFamily": "'Hack Nerd Font Mono', 'FiraCode Nerd Font Mono', 'Hack NF', 'FiraCode NF', Consolas, monospace",
    "terminal.integrated.fontSize": 13,
    // ==============================
    // ICON THEME
    // ==============================
    "workbench.iconTheme": "file-icons",
    // ==============================
    // COLOR THEME
    // ==============================
    "workbench.colorTheme": "Krys Colors",
    "editor.semanticTokenColorCustomizations": {
        "[Krys Colors]": {
            // Apply to this theme only
            "enabled": true
            // "enabled"   : false
        }
    },
    // ---------------------------------------------------------------------------------
    // | GIT                                                                           |
    // ---------------------------------------------------------------------------------
    "git.autofetch": true,
    // ---------------------------------------------------------------------------------
    // | EXTENSIONS (coloring/highlighting)                                            |
    // ---------------------------------------------------------------------------------
    // ==============================
    // indent-rainbow
    // ==============================
    "indentRainbow.colors": [
        "rgba(255,255,64,0.07)",
        "rgba(127,255,127,0.07)",
        "rgba(255,127,255,0.07)",
        "rgba(79,236,236,0.07)"
    ],
    "indentRainbow.ignoreErrorLanguages": [
        "markdown",
        "restructuredtext"
    ],
    // ==============================
    // Error Lens
    // ==============================
    "errorLens.messageTemplate": "$severity [1/$count] $message [$source] <$code>",
    "errorLens.statusBarMessageTemplate": "$severity $message [$source]",
    "errorLens.delay": 1,
    "errorLens.gutterIconsEnabled": true,
    "errorLens.gutterIconSet": "defaultOutline",
    // ---------------------------------------------------------------------------------
    // | EXTENSIONS (tooling)                                                          |
    // ---------------------------------------------------------------------------------
    // ==============================
    // Code Runner
    // ==============================
    "code-runner.enableAppInsights": false, // telemetry
    // ==============================
    // VS IntelliCode
    // ==============================
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "vsintellicode.features.python.deepLearning": "enabled",
    // ==============================
    // Todo Tree
    // ==============================
    "todo-tree.filtering.includeHiddenFiles": true,
    "todo-tree.regex.regex": "((^|//|#|<!--|;|/\\*|\\.\\.)\\s*($TAGS))",
    "todo-tree.general.enableFileWatcher": true,
    "todo-tree.general.statusBar": "tags",
    "todo-tree.general.tags": [
        "NOTE:",
        "CHANGE ME",
        "TODO:",
        "BUG:",
        "FIXME:",
        "HACK:"
    ],
    "todo-tree.highlights.enabled": true,
    "todo-tree.highlights.defaultHighlight": {
        "opacity": 100,
        "type": "tag"
    },
    "todo-tree.highlights.customHighlight": {
        "NOTE:": {
            "foreground": "white",
            "background": "green",
            "icon": "note",
            "iconColour": "green",
            "rulerColour": "rgba(0,0,0,0)",
            "hideFromTree": true,
            "hideFromStatusBar": true
        },
        "CHANGE ME": {
            "foreground": "black",
            "background": "aqua",
            "icon": "arrow-switch",
            "iconColour": "aqua",
            "rulerColour": "rgba(0,0,0,0)",
            // "hideFromTree": true,
            "hideFromStatusBar": true
        },
        "TODO:": {
            "foreground": "black",
            "background": "#ff00d4",
            "icon": "checklist",
            "iconColour": "#ff00d4",
            "type": "text", 
            "rulerColour": "#ff00d4"
        },
        "BUG:": {
            "foreground": "white",
            "background": "red",
            "icon": "bug",
            "iconColour": "red",
            "gutterIcon": true,
            "type": "text",
            "rulerColour": "red"
        },
        "FIXME:": {
            "foreground": "white",
            "background": "orangered",
            "icon": "flame",
            "iconColour": "orangered",
            "gutterIcon": true,
            "type": "whole-line",
            "rulerColour": "red"
        },
        "HACK:": {
            "foreground": "black",
            "background": "orange",
            "icon": "beaker",
            "iconColour": "orange",
            "gutterIcon": true,
            "type": "text",
            "rulerColour": "red"
        }
    },
    "todo-tree.tree.showCountsInTree": true,
    "todo-tree.filtering.excludeGlobs": [
        // DIRECTORIES
        "**/node_modules/**",
        "**/bower_components/**",
        "**/dist/**",
        "**/build/**",
        "**/.vscode/**",
        "**/_output/**",
        "**/*.min.*",
        "**/*.map",
        "**/.next/**",
        "**/.tox/**",
        "**/.nox/**",
        "**/*venv*/**",
        // FILES
        "**/.gitignore",
        "**/.gitattributes"
    ],
    // ==============================
    // Spell Right
    // ==============================
    "spellright.language": [
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "spellright.ignoreFiles": [
        "**/.gitignore",
        "**/.spellignore"
    ],
    // ---------------------------------------------------------------------------------
    // | EXTENSIONS (languages)                                                        |
    // ---------------------------------------------------------------------------------
    // ==============================
    // rust-analyzer (rust)
    // ==============================
    "rust-analyzer.inlayHints.typeHints": true,
    // ==============================
    // PYTHON
    // ==============================
    "python.terminal.activateEnvInCurrentTerminal": false,
    "python.venvPath": "${workspaceFolder}/.venv/bin/activate",
    "python.pythonPath": "${workspaceFolder}/.venv/bin/python",
    "python.languageServer": "Pylance",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "${workspaceFolder}/.venv/bin/flake8helled",
    "python.linting.mypyEnabled": true,
    "python.linting.mypyPath": "${workspaceFolder}/.venv/bin/mypy",
    "python.analysis.completeFunctionParens": true,
    // ==============================
    // Python Docstring Generator (python)
    // ==============================
    "autoDocstring.docstringFormat": "sphinx",
    "autoDocstring.includeExtendedSummary": true,
    "autoDocstring.customTemplatePath": "~/.config/Code/User/sphinx_docstring_template_custom.mustache",
    // ==============================
    // Jupyter
    // ==============================
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    // ==============================
    // TypeScript
    // ==============================
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[typescriptreact]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    // ==============================
    // reStructuredText
    // ==============================
    "redhat.telemetry.enabled": false,
    "restructuredtext.builtDocumentationPath": "${workspaceFolder}/docs/build/html",
    "restructuredtext.confPath": "${workspaceFolder}/docs/source",
    "restructuredtext.linter.executablePath": "${workspaceFolder}/.venv/bin/rstcheck",
    "restructuredtext.linter.extraArgs": [
        "--config ${workspaceFolder}/tox.ini"
    ],
    "restructuredtext.linter.run": "onSave",
    "restructuredtext.sphinxBuildPath": "${workspaceFolder}/.venv/bin/sphinx-build",
    // ==============================
    // TOML
    // ==============================
    "[toml]": {
        "editor.language.brackets": [
            ["[", "]"],
            ["{", "}"]
        ],
        "editor.language.colorizedBracketPairs": [
            ["[", "]"],
            ["{", "}"]
        ]
    },
    "evenBetterToml.semanticTokens": true,
    // ==============================
    // Svelte
    // ==============================
    "svelte.enable-ts-plugin": true
}
